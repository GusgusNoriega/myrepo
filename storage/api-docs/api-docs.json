{
    "openapi": "3.0.0",
    "info": {
        "title": "MyRepo API",
        "description": "Documentaci√≥n generada con l5-swagger",
        "contact": {
            "email": "soporte@midominio.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://myrepo.test",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/api/documentos": {
            "get": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Listar documentos paginados",
                "operationId": "f2d99bf6d92add5d1b3d72ba30e6f0fd",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "buscar",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "tipo",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "imagen",
                                "pdf",
                                "doc",
                                "docx",
                                "otro"
                            ]
                        }
                    },
                    {
                        "name": "fecha_desde",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "fecha_hasta",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "ordenar",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "default": "desc",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista paginada de documentos"
                    }
                }
            },
            "post": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Subir archivo",
                "operationId": "feea9dd8a9ce6d6b0d60d91979815e5b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "titulo"
                                ],
                                "properties": {
                                    "titulo": {
                                        "type": "string"
                                    },
                                    "descripcion": {
                                        "type": "string"
                                    },
                                    "ruta": {
                                        "type": "string",
                                        "example": "/storage/archivos/123/contrato.pdf"
                                    },
                                    "imagen": {
                                        "type": "file",
                                        "format": "binary"
                                    },
                                    "archivo": {
                                        "type": "file",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Creado"
                    }
                }
            }
        },
        "/api/documentos/{id}": {
            "get": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Mostrar un documento",
                "operationId": "82bdd2d2b13e38b7eb82c620ab0288ba",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Documento encontrado"
                    },
                    "404": {
                        "description": "Documento no encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Documentos"
                ],
                "summary": "Eliminar documento",
                "operationId": "402a908e5990df8627c392cc04d0227f",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Documento eliminado"
                    },
                    "404": {
                        "description": "Documento no encontrado"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Documentos",
            "description": "Documentos"
        }
    ]
}